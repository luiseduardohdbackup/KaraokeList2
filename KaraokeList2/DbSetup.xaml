<Window x:Class="KaraokeList2.DbSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DbSetup" Height="300" Width="300" MinWidth="400" MinHeight="400" Loaded="Window_Loaded_1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="lstFolders" HorizontalAlignment="Left" Height="207" Margin="10,10,0,0" VerticalAlignment="Top" Width="274" Grid.ColumnSpan="2"/>
        <Button Name="btnAddFolder" Content="Add folder..." Grid.Column="1" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" Width="75" Click="btnAddFolder_Click"/>
        <Button Name="btnDelFolder" Content="Delete folder" Grid.Column="1" HorizontalAlignment="Left" Margin="19,37,0,0" VerticalAlignment="Top" Width="75" Click="btnDelFolder_Click"/>
        <Button Name="btnScan" Content="Scan now" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Width="75" Click="btnScan_Click"/>

    </Grid>
</Window>
